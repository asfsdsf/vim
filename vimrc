    let g:VM_maps["Add Cursor Down"]            = '<A-C-j>'
    let g:VM_maps["Add Cursor Up"]              = '<A-C-k>'
    let g:VM_maps["Numbers"]                    = '<A-n>'
    let g:VM_maps["Visual Regex"]               = 'g/'
