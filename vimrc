nnoremap <Space>2  2<C-w><C-w>
nnoremap <Space>3  3<C-w><C-w>
nnoremap <Space>4  4<C-w><C-w>
nnoremap <Space>5  5<C-w><C-w>
nnoremap <Space>6  6<C-w><C-w>
nnoremap <Space>7  7<C-w><C-w>
nnoremap <Space>8  8<C-w><C-w>
